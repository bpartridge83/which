{% extends 'layout/base.html.twig' %}

{% block body %}

<a href="/project/new" class="btn pull-right">Create Project</a>
<h2>Projects</h2>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for project in projects %}
		<tr>
			<td>
				{{ project.name }}
			</td>
			<td>
				<a href="/project/{{ project._id }}" class="btn">View Project</a>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock %}